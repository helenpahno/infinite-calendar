<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:alpha="0.6"/>

    <RelativeLayout
        android:id="@+id/color_tray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@color/white"
        >

        <ImageButton
            android:id="@+id/burgundy_pick"
            app:backgroundTint="@color/burgundy"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:contentDescription="#FF800020"
            android:layout_alignParentStart="true"/>

        <ImageButton
            android:id="@+id/lanternpurple_pick"
            app:backgroundTint="@color/lantern_purple"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:contentDescription="#FF7028E3"
            android:layout_toEndOf="@+id/burgundy_pick"/>

        <ImageButton
            android:id="@+id/forest_pick"
            app:backgroundTint="@color/forest"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:contentDescription="#FF00B386"
            android:layout_toEndOf="@+id/lanternpurple_pick"/>

        <ImageButton
            android:id="@+id/deepcoral_pick"
            app:backgroundTint="@color/deep_coral"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:layout_below="@+id/burgundy_pick"
            android:contentDescription="#FFFF0A54"/>

        <ImageButton
            android:id="@+id/lilac_pick"
            app:backgroundTint="@color/lilac"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:layout_below="@+id/burgundy_pick"
            android:layout_toEndOf="@+id/deepcoral_pick"
            android:contentDescription="#FF9452DC"/>

        <ImageButton
            android:id="@+id/karatemat_pick"
            app:backgroundTint="@color/karate_mat"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:layout_below="@+id/burgundy_pick"
            android:layout_toEndOf="@+id/lilac_pick"
            android:contentDescription="#FF00ECBF"/>

        <ImageButton
            android:id="@+id/georgiacoral_pick"
            app:backgroundTint="@color/georgia_coral"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:layout_below="@+id/deepcoral_pick"
            android:contentDescription="#FFFF5C8A"/>

        <ImageButton
            android:id="@+id/midpurple_pick"
            app:backgroundTint="@color/mid_purple"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:layout_below="@+id/deepcoral_pick"
            android:layout_toEndOf="@+id/georgiacoral_pick"
            android:contentDescription="#FFAA6DD7"/>

        <ImageButton
            android:id="@+id/sky_pick"
            app:backgroundTint="@color/sky"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:layout_below="@+id/deepcoral_pick"
            android:layout_toEndOf="@+id/midpurple_pick"
            android:contentDescription="#FF00EDFF"/>

        <ImageButton
            android:id="@+id/pink_pick"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            app:backgroundTint="@color/pink"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/georgiacoral_pick"
            android:contentDescription="#FFFF99AC"/>

        <ImageButton
            android:id="@+id/paleorchid_pick"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            app:backgroundTint="@color/pale_orchid"
            android:layout_below="@+id/georgiacoral_pick"
            android:layout_toEndOf="@+id/pink_pick"
            android:contentDescription="#FFC78FD1"/>

        <ImageButton
            android:id="@+id/robinegg_pick"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            app:backgroundTint="@color/robin_egg"
            android:layout_below="@+id/georgiacoral_pick"
            android:layout_toEndOf="@+id/paleorchid_pick"
            android:contentDescription="#FFB2F5FF"/>

        <ImageButton
            android:id="@+id/wanpink_pick"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            app:backgroundTint="@color/wan_pink"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/pink_pick"
            android:contentDescription="#FFF9BEC7"/>

        <ImageButton
            android:id="@+id/blush_pick"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            app:backgroundTint="@color/blush"
            android:layout_below="@+id/pink_pick"
            android:layout_toEndOf="@+id/wanpink_pick"
            android:contentDescription="#FFE5B2CA"/>

        <ImageButton
            android:id="@+id/paleblue_pick"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            app:backgroundTint="@color/pale_blue"
            android:layout_below="@+id/pink_pick"
            android:layout_toEndOf="@+id/blush_pick"
            android:contentDescription="#FFE9FFFA"/>

    </RelativeLayout>

</RelativeLayout>