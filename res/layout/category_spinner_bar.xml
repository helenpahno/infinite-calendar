<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/deep_coral">

    <LinearLayout
        android:id="@+id/color_border"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@color/white"
        android:layout_alignTop="@+id/category_name"
        android:layout_alignBottom="@+id/category_name"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp"
        android:layout_marginStart="5dp">
        <TextView
            android:id="@+id/color_swatch"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:background="@color/pink"
            android:text="" />
    </LinearLayout>

    <TextView
        android:id="@+id/category_name"
        android:text="Work"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_toRightOf="@+id/color_border"
        android:gravity="center" />

</RelativeLayout>